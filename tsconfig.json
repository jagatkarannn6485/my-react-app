{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true, // Add this line
    "noEmit": true  // Optional: set to true if you want to prevent emitting output files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}